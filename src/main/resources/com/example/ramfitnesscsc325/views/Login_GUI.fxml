<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="850.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="your.package.ControllerClass">
    <children>
        <VBox alignment="CENTER" layoutX="338.0" layoutY="164.0" spacing="10">
            <!-- Title -->
            <Label styleClass="login-title" text="Login" />

            <!-- Username Field -->
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label text="Username:" />
                <TextField fx:id="usernameField" promptText="Enter username" />
            </VBox>

            <!-- Password Field -->
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label text="Password:" />
                <PasswordField fx:id="passwordField" promptText="Enter password" />
            </VBox>

            <!-- Login Button -->
            <Button fx:id="loginButton" onAction="#handleLogin" styleClass="login-button" text="Login" />

            <!-- Optional: Sign-up / Forgot Password Links -->
            <Label styleClass="link-label" text="Don't have an account? Sign Up" />
            <Label styleClass="link-label" text="Forgot Password?" />
        </VBox>
    </children>
</AnchorPane>
