<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.ControllerClass">
    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="100" layoutY="100">
            <!-- Title -->
            <Label text="Login" styleClass="login-title"/>

            <!-- Username Field -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Username:"/>
                <TextField fx:id="usernameField" promptText="Enter username"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Password:"/>
                <PasswordField fx:id="passwordField" promptText="Enter password"/>
            </VBox>

            <!-- Login Button -->
            <Button text="Login" fx:id="loginButton" onAction="#handleLogin" styleClass="login-button"/>

            <!-- Optional: Sign-up / Forgot Password Links -->
            <Label text="Don't have an account? Sign Up" styleClass="link-label"/>
            <Label text="Forgot Password?" styleClass="link-label"/>
        </VBox>
    </children>
</AnchorPane>
